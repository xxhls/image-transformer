{
  "extends": ["wkts"],
  "plugins": [],
  "globals": {},
  "rules": {},
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/no-misused-promises": 0
      },
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "warnOnUnsupportedTypeScriptVersion": true,
        "ecmaVersion": "latest",
        "lib": ["esNext"],
        "project": "./tsconfig.json"
      }
    }
  ]
}
